{
  "rules": {
    "indent": [
      2,
      2
    ],
    "dot-notation": [
      2,
      {"allowKeywords": true}
    ],
    "eqeqeq": [
      2,
      "smart"
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended"
}
